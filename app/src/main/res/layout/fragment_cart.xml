<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/successGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/checkout_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_alignParentBottom="true"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textSize="14sp" />

                    <com.wajahatkarim3.easymoneywidgets.EasyMoneyTextView
                        android:id="@+id/total_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <Button
                    android:id="@+id/checkout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/button_gradient_bg"
                    android:text="@string/checkout"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/checkout_wrapper"
                android:background="?attr/selectableItemBackground"/>

        </RelativeLayout>

        <include
            android:id="@+id/errorGroup"
            layout="@layout/empty_cart"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone" />

        <include
            android:id="@+id/errorState"
            layout="@layout/somthing_wrong"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>